for $c in $listColors
    .{$c}\\\@text
        color: $color[$c] !important;

for $c in $listColors
    .{$c}\\\@border
        border-color: $color[$c] !important;

        &::before, &::after
            border-color: $color[$c] !important;

for $prop, $val in merge($backgroundColor, $color)
    .{$prop}\\\@bg
        background-color: $val !important;
