.clearfix
    cf();

.stackable > *
    stack();

.stack
    stack();

.unstack
    unstack();

.block, .shown
    display: block !important;

.inline
    display: inline-block !important;

.flex
    display: flex !important;

.relative
    position: relative;

.fixed
    position: fixed;

.absolute
    position: absolute;

.static
    position: static;

.fixed, .absolute
    &.top
        top: 0;

    &.left
        left: 0;

    &.right
        right: 0;

    &.bottom
        bottom: 0;

.hidden
    display: none !important;

.visible
    visibility: visible !important;

.invisible
    visibility: hidden !important;

.borderless
    border: 0 !important;

.centered
    &:not(.vertical):not(.horizontal)
        align(both);

    &.vertical
        align(vertical);

    &.horizontal
        align(horizontal);

.nowrap
    white-space: nowrap;

.capitalize
    text-transform: capitalize;

.text
    &-right
        text-align: right;

    &-left
        text-align: left;

    &-center
        text-align: center;

    &-justify
        text-align: justify;

        &:after
            display: inline-block;
            content: '';
            width: 100%;

.float
    &-left
        float: left;

    &-right
        float: right;

    &-none
        float: none;

.align
    &-top
        vertical-align: top;
        display: inline-block;

    &-middle
        vertical-align: middle;
        display: inline-block;

    &-bottom
        vertical-align: bottom;
        display: inline-block;

    &-center
        align(both);

    &-horizontal
        align(horizontal);

    &-vertical
        align(vertical);

.transform
    &.uppercase
        text-transform: uppercase;

    &.lowercase
        text-transform: lowercase;

    &.capitalize
        text-transform: capitalize;

.circle
    border-radius: 50%;

.shadowless
    box-shadow: none !important;
