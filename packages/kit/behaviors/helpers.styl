.clearfix
    cf();

.stackable > *
    stack();

.stack
    stack();

.unstack
    unstack();

.block
    display: block !important;

.inline
    display: inline-block !important;

.relative
    position: relative;

.fixed
    position: fixed;

.absolute
    position: absolute;

.static
    position: static;

.fixed, .absolute
    &.top
        top: 0;

    &.left
        left: 0;

    &.right
        right: 0;

    &.bottom
        bottom: 0;

.hidden
    display: none !important;

.invisible
    visibility: hidden !important;

.borderless
    border: 0 !important;

.centered
    &:not(.vertical):not(.horizontal)
        align(both);

    &.vertical
        align(vertical);

    &.horizontal
        align(horizontal);

.nowrap
    white-space: nowrap;

.capitalize
    text-transform: capitalize;

.text-left
    text-align: left;

.text-right
    text-align: right;

.text-center
    text-align: center;

.text
    &.right
        text-align: right;

    &.left
        text-align: left;

    &.center
        text-align: center;

.text-justify
    text-align: justify;

    &:after
        display: inline-block;
        content: '';
        width: 100%;

.float-left
    float: left;

.float-right
    float: right;

.float-reset
    float: none;

.align-top
    vertical-align: top;
    display: inline-block;

.align-middle
    vertical-align: middle;
    display: inline-block;

.align-bottom
    vertical-align: bottom;
    display: inline-block;

.align-center
    align(both);

.align-horizontal
    align(horizontal);

.align-vertical
    align(vertical);

.transform
    &.uppercase
        text-transform: uppercase;

    &.lowercase
        text-transform: lowercase;

    &.capitalize
        text-transform: capitalize;

.circle
    border-radius: 50%;

.noshadow
    box-shadow: none !important;
