.accordion
    span((1 / 1));

    & > .title
        padding: .8rem 0;
        cursor: pointer;
        color: $textColor.header;
        font-weight: 500;

        & > i
            width: 1.2rem;
            display: inline-block;
            height: 1px;

            &::before
                content: '\f125';

        &.open
            i::before
                content: '\f123';

    & > .content
        display: none;
        color: text-default;

        &.open
            display: block;

        & + .title
            margin-top: .4rem;

    &.styled
        padding: 0;
        max-width: 40rem;
        border: 1px solid $color.border;
        background-color: $color.white;
        border-radius: $borderRadius.base;

        &.fluid
            max-width: none;

        & > .title
            padding: 1.6rem 1.6rem;
            border-top: 1px solid $color.border;
            font-weight: 600;
            color: $color.header;

            &:first-child
                border: none;

        & > .content
            padding: 0 1.6rem 1.6rem 1.6rem;
            margin-top: -.8rem;

            & + .title
                margin-top: 0;
