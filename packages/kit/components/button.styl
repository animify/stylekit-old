importThemeFile(getFilename(), $theme);
$backgroundColor = $colorWhite;
$borderRadius = $borderRadiusM;
$borderWidth = 1px;
$borderColor = $colorBase;
$textColor = $colorBase;
$lineHeight = $lineHeightBase;
$padding = .8rem 1.6rem;

.button
    position: relative;
    display: inline-block;
    padding: $padding;
    outline: 0;
    border: 0;
    border: $borderWidth solid $borderColor;
    border-radius: $borderRadius;
    background-color: $backgroundColor;
    color: $textColor;
    font-weight: $fontWeight.semiBold;
    font-size: $fontSize.body;
    line-height: $lineHeight;
    cursor: pointer;
    transition: box-shadow $animation-duration-m $animation-type-ease;

    &:hover
        background-color: @color;
        color: #fff;

    +disabled()
        background-color: $backgroundColor !important;
        border-color: @background-color;
        color: $color !important;
        user-select: none;

    for size in $sizeList
        &.{size}
            font-size: lookup('$font-size-' + size);

    for color in $colorList
        &.{color}
            background-color: lookup('$color' + camelCase(color));
            border: $borderWidth solid @background-color;
            color: $colorWhite;
