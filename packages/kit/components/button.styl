.button
    @extend .ph4, .pv2;
    position: relative;
    display: inline-block;
    outline: 0;
    border: 0;
    border: 1px solid $color.dim;
    border-radius: $borderRadius.base;
    background-color: $color.white;
    color: $textColor.heading;
    font-weight: $fontWeight.semiBold;
    font-size: $fontSize.body;
    line-height: $lineHeight.body;
    transition: box-shadow $animation-duration-m $animation-type-ease;
    box-shadow: $boxShadow.form;
    text-align: center;

    &.transparent
        background-color: transparent;
        border-color: transparent;
        box-shadow: none;

    &:hover
        background-color: $color.snow;
        color: $textColor.heading;

    &:active
        background-color: $color.dim;
        color: $textColor.heading;

    for size in $sizeList
        &.{size}
            font-size: $variantFontSize[size];

    for color in $listColors
        &.{color}
            background-color: $color[color];
            border-color: @background-color;
            color: $color.white;

            &:hover
                background-color: darken(@background-color, 8%);
                border-color: @background-color;
                color: #fff;

            &:active
                background-color: darken(@background-color, 16%);
                border-color: @background-color;
                color: #fff;

    &.transparent.base
        background-color: transparent;
        border-color: transparent;
        color: $color.base;

        &:hover
            background-color: $color.base;
            color: $color.white;

        &:active
            background-color: darken($color.base, 8%);
            color: $color.white;

    +disabled()
        color: $color.body !important;
        background-color: $color.snow;
        border-color: @background-color;
