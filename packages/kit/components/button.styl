.button
    position: relative;
    display: inline-block;
    padding: .8rem 1.6rem;
    outline: 0;
    border: 0;
    border: 1px solid $borderColor.base;
    border-radius: $borderRadius.base;
    background-color: $backgroundColor.white;
    color: $textColor.header;
    font-weight: $fontWeight.semiBold;
    font-size: $fontSize.body;
    line-height: $lineHeightBase;
    transition: box-shadow $animation-duration-m $animation-type-ease;
    box-shadow: $boxShadow.form;

    &:hover
        background-color: $backgroundColor.lightest;
        color: $textColor.header;

    &:active
        background-color: $backgroundColor.lighter;
        color: $textColor.header;

    &.transparent
        background-color: transparent;
        color: $color.base;
        border-color: transparent;

        &:hover
            background-color: $backgroundColor.light;
            border-color: @background-color;

    for size in $sizeList
        &.{size}
            font-size: $fontSize[size];

    for color in $listColors
        &.{color}
            background-color: $color[color];
            border-color: @background-color;
            color: $color.white;

            &:hover
                background-color: darken(@background-color, 8%);
                border-color: @background-color;
                color: #fff;

            &:active
                background-color: darken(@background-color, 16%);
                border-color: @background-color;
                color: #fff;

    +disabled()
        color: $color.body !important;
        background-color: $backgroundColor.grey;
        border-color: @background-color;