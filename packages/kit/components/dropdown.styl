.dropdown
    position: relative;
    display: inline-block;

    .toggle
        user-select: none;

    .menu
        absolute: top 3.2rem left 0;
        z-index: 800;
        padding: .8rem 0;
        min-width: 21.6rem;
        border: 1px solid $color.dim;
        
        border-radius: $borderRadius.base;
        background-color: $color.white;
        box-shadow: 0 1px 4px rgba(0, 0, 31, .1), 0 4px 14px rgba(0, 0, 31, .08);
        display: none;

        li, a
            display: block;
            color: $textColor.body;
            line-height: $lineHeightBase;
            font-weight: $fontWeight.book;

        li
            &.divider
                margin: .4rem 0;
                padding: 0 1.8rem;
                background-color: $color.smoke;
                height: 1px;
                width: 100%;
                content: ' ';
            &.header
                color: $textColor.heading;
                font-weight: $fontWeight.bold;
                font-size: $fontSize.body;
                padding: .6rem 1.8rem;

            a
                padding: .6rem 1.8rem;

            &:not(.header):not(.divider):hover
                background-color: $color.smoke;

                a
                    color: $textColor.heading;

            &:not(.header):not(.divider):active
                background-color: $color.smoke;

                a
                    color: $textColor.heading;

            +disabled()
                color: $color.body !important;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1.4rem;

    &.right
        .menu
            right: 0;
            left: auto;

    &.upward
        .menu
            top: auto;
            bottom: 3.2rem;
