importThemeFile(getFilename(), $theme);
$borderColor = $colorBorder;
$borderRadius = $borderRadiusM;
$lineHeight = $lineHeightBase;
$padding = 1.2rem 0;
$itemPadding = .4rem 2rem;

.dropdown
    position: relative;
    display: inline-block;

    .toggle
        user-select: none;

    .menu
        absolute: top 3.2rem left 0;
        z-index: 800;
        padding: $padding;
        min-width: 21.6rem;
        border: 1px solid $borderColor;
        border-radius: $borderRadius;
        background-color: $backgroundColor.white;
        box-shadow: 0 1px 4px rgba(0, 0, 31, .1), 0 4px 14px rgba(0, 0, 31, .08);
        display: none;

        li, a
            display: block;
            line-height: $lineHeight;
            font-weight: $fontWeight.book;

        li
            padding: $itemPadding;

            &.header
                color: $textColor.body;
                font-weight: $fontWeight.semiBold;
                font-size: $fontSize.body;

        a
            color: $textColor.body;
            cursor: pointer;

            &:hover
                color: $color.base;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1.6rem;

    &.right
        .menu
            right: 0;
            left: auto;

    &.upward
        .menu
            top: auto;
            bottom: 3.2rem;
