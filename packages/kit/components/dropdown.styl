.dropdown
    position: relative;
    display: inline-block;

    .toggle
        user-select: none;

    .menu
        absolute: top 3.2rem left 0;
        z-index: 800;
        padding: .8rem 0;
        min-width: 21.6rem;
        border: 1px solid $borderColor.base;
        border-radius: $borderRadius.base;
        background-color: $backgroundColor.white;
        box-shadow: 0 1px 4px rgba(0, 0, 31, .1), 0 4px 14px rgba(0, 0, 31, .08);
        display: none;

        li, a
            display: block;
            color: $textColor.body;
            line-height: $lineHeightBase;
            font-weight: $fontWeight.book;

        li
            padding: .4rem 1.8rem;

            &.header
                color: $textColor.body;
                font-weight: $fontWeight.semiBold;
                font-size: $fontSize.body;

            &:hover
                background-color: $backgroundColor.lighter;

                a
                    color: $textColor.body;

            &:active
                background-color: $backgroundColor.light;

                a
                    color: $textColor.body;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1.6rem;

    &.right
        .menu
            right: 0;
            left: auto;

    &.upward
        .menu
            top: auto;
            bottom: 3.2rem;
