importThemeFile(getFilename(), $theme);
$backgroundColor = $colorWhite;
$borderColor = $colorBorder;
$borderRadius = $borderRadiusM;
$borderWidth = 1px;
$boxShadow = 0 1px 4px rgba(0, 0, 31, .1), 0 4px 14px rgba(0, 0, 31, .08);
$lineHeight = $lineHeightBase;
$fontWeight = $fontWeightBook;
$padding = .8rem 0;
$itemPadding = .2em 1.4em;
$headerColor = $textColorBody;
$headerFontSize = $fontSizeBody;
$headerFontWeight = $fontWeightSemibold;
$linkColor = $textColorBody;
$hoverLinkColor = $colorBase;

.dropdown
    position: relative;
    display: inline-block;

    .toggle
        user-select: none;

    .menu
        absolute: top 2rem left 0;
        z-index: 800;
        padding: $padding;
        min-width: 13rem;
        border: $borderWidth solid $borderColor;
        border-radius: $borderRadius;
        background-color: $backgroundColor;
        box-shadow: $boxShadow;
        display: none;

        li, a
            display: block;
            line-height: $lineHeight;
            font-weight: $fontWeight;

        li
            padding: $itemPadding;

            &.header
                color: $headerColor;
                font-weight: $headerFontWeight;
                font-size: $headerFontSize;

        a
            color: $linkColor;
            cursor: pointer;

            &:hover
                color: $hoverLinkColor;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1rem;

    &.right
        .menu
            right: 0;
            left: auto;

    &.upward
        .menu
            top: auto;
            bottom: 2rem;
