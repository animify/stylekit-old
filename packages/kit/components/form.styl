importThemeFile(getFilename(), $theme);
$backgroundColor = $colorWhite;
$borderColor = $colorBorder;
$focusBorderColor = $colorBase;
$borderRadius = $borderRadiusM;
$borderWidth = 1px;
$textCcolor = $textColorBody;
$disabledTextColor = $textColorDisabled;
$boxShadow = $boxShadowForm;
$padding = 1.2rem 1.6rem;
$inputTransition = $animation-type-ease $animation-duration-m;

.input
    position: relative;
    font-style: normal;

    input[type='text'], input[type='number'], input[type='password'], textarea
        padding: $padding;
        min-width: 21.6rem;
        outline: 0;
        border: 0;
        border: $borderWidth solid $borderColor;
        border-radius: $borderRadius;
        background-color: $backgroundColor;
        box-shadow: $boxShadow;
        color: $textCcolor;
        text-align: left;
        font-size: $fontSizeBody;
        font-family: $fontFamilyBody;
        line-height: $lineHeightBase;
        transition: border-color $inputTransition;

        &:focus
            border-color: $focusBorderColor;

        +inputPlaceholder()
            color: $disabledTextColor;

    &.transparent
        input[type='text'], input[type='number'], input[type='password'], textarea
            margin: 0;
            padding: 0;
            border: 0;
            background-color: transparent;

    +disabled()
        input[type='text'], input[type='number'], input[type='password'], textarea
            color: $disabledTextColor;

    textarea
        min-height: 8rem;
        max-height: 16rem;
        resize: vertical;
