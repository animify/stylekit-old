.input
    position: relative;
    font-style: normal;
    display: flex;
    flex-direction: column;

    label
        font-size: $fontSize.sub;
        color: $textColor.heading;
        font-weight: $fontWeight.semiBold;

    textarea
        min-height: 8rem;
        max-height: 16rem;
        resize: vertical;

    input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
        padding: .8rem 1.4rem;
        min-width: 21.6rem;
        outline: 0;
        border: 0;
        border: 1px solid $color.dim;
        border-radius: $borderRadius.base;
        background-color: $color.white;
        box-shadow: $boxShadow.form;
        color: $textColor.heading;
        text-align: left;
        font-size: $fontSize.body;
        font-family: $fontFamily.body;
        line-height: $lineHeightBase;
        transition: border-color $animation-type-ease $animation-duration-m;
        order: 2;

        & + label
            margin-bottom: .4rem;
            order: 1;
            font-weight: $fontWeight.bold;

        &:hover
            border-color: $color.smoke;
            box-shadow: $boxShadow.formFocus;

            & + label
                color: $textColor.heading;

        &:focus
            border-color: $color.base;
            box-shadow: $boxShadow.formFocus;

            & + label
                color: $color.base;

        +inputPlaceholder()
            color: $textColor.light;
            opacity: 1;

    input[type='password']
        font-family: small-caption;

        +inputPlaceholder()
            font-family: $fontFamily.body;

    &.transparent
        input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
            margin: 0;
            padding: 0;
            border: 0;
            box-shadow: none;
            background-color: transparent;

        textarea
            resize: none;

    +disabled()
        input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
            color: $textColor.disabled;

            +inputPlaceholder()
                color: $textColor.disabled;
                opacity: 1;

    & + .input
        margin-top: 1.4rem;

    &.full
        input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
            max-width: none;
            display: block;
            width: 100%;
