.input
    position: relative;
    font-style: normal;

    textarea
        min-height: 8rem;
        max-height: 16rem;
        resize: vertical;

    input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
        padding: .8rem 1.4rem;
        min-width: 21.6rem;
        outline: 0;
        border: 0;
        border: 1px solid $borderColor.base;
        border-radius: $borderRadius.base;
        background-color: $backgroundColor.white;
        box-shadow: $boxShadow.form;
        color: $textColor.header;
        text-align: left;
        font-size: $fontSize.body;
        font-family: $fontFamily.body;
        line-height: $lineHeightBase;
        transition: border-color $animation-type-ease $animation-duration-m;

        &:focus
            border-color: $color.base;

        +inputPlaceholder()
            color: $textColor.body;
            opacity: 1;

    &.transparent
        input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
            margin: 0;
            padding: 0;
            border: 0;
            box-shadow: none;
            background-color: transparent;

        textarea
            resize: none;

    +disabled()
        input[type='text'], input[type='number'], input[type='password'], input[type='email'], textarea
            color: $textColor.disabled;

            +inputPlaceholder()
                color: $textColor.disabled;
                opacity: 1;