$lineHeight = $lineHeightBase;
$padding = .4rem 1.2rem;

.label
    position: relative;
    display: inline-block;
    padding: $padding;
    border: 0;
    border-radius: $borderRadius.base;
    background-color: $color.base;
    color: $textColor.white;
    font-weight: $fontWeight.bold;
    font-size: $fontSize.sub;

    &.circular
        padding: .4rem;
        border-radius: 50%;
        width: 2.4rem;
        height: 2.4rem;
        line-height: 1.6rem;
        text-align: center;

    .detail
        background-color: rgba(0, 0, 0, .1);
        padding: .4rem 1.2rem;
        height: 100%;
        margin: -.4rem -1.2rem -.4rem 1.2rem;
        border-radius: 0 $borderRadius.base $borderRadius.base 0;
        display: inline-block;
        font-weight: 500;
        vertical-align: top;
        float: right;
        color: rgba(255, 255, 255, .7);

    i
        margin-right: .6rem;

    a
        color: #fff;
        margin-left: .8rem;
        padding-left: .8rem;
        font-weight: 600;
        text-transform: none;
        border-left: 2px solid rgba(0, 0, 0, .1);

    &.check
        width: 12px;
        height: 6px;
        relative: top -4px;
        border: 3px solid $color.base;
        border-radius: 0;
        border-top: none;
        border-right: none;
        background: none;
        transform: rotate(-45deg);
        padding: 0;

    &.cross
        position: relative;
        width: 12px;
        height: 12px;
        border-radius: 0;
        background: none;
        padding: 0;

        &::before, &::after
            width: 0;
            height: 100%;
            content: ' ';
            display: block;
            absolute: right 6px;
            border-left: 3px solid $color.base;

        &::before
            transform: rotate(45deg);

        &::after
            transform: rotate(-45deg);