.link
    text-decoration: none;
    color: $color.base;
    cursor: pointer;
    position: relative;

    &:hover
        color: darken(@color, 12%);

    &:active
        color: darken(@color, 24%);

    &.link-underline
        &:before
            border-bottom: 1px solid @color;
            width: 100%;
            content: ' ';
            absolute: bottom -2px left;

    for $text in 'light' 'body' 'heading'
        &.link-{$text}
            color: $textColor[$text];

            &.link-underline
                &:before
                    border-color: @color;

            &:hover
                color: darken(@color, 12%);

            &:active
                color: darken(@color, 24%);

    for $ui in 'positive' 'negative' 'warning' 'info'
        &.link-{$ui}
            color: $uiColor[$ui];

            &.link-underline
                &:before
                    border-color: @color;

            &:hover
                color: darken(@color, 12%);

            &:active
                color: darken(@color, 24%);
