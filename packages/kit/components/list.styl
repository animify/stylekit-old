importThemeFile(getFilename(), $theme);
$margin = 1.2rem 0 0 0;
$padding = 0 0 0 1.6rem;
$itemLineHeight = $lineHeightBase;
$itemMargin = 0 0 1.2rem 0;
$counterOpacity = .6;
$counterMargin = 0 .4rem 0 0;
$bulletOpacity = .6;
$bulletMargin = 0 0 0 -1.2rem;
$dividedPadding = .8rem 0;

.list
    & .list
        margin: $margin;
        padding: $padding;

    li, .item
        margin: $itemMargin;
        color: $textColor.body;
        font-size: $fontSize.body;
        line-height: $itemLineHeight;

        & > .header
            display: block;
            font-weight: $fontWeight.semiBold;

    &.ordered
        counter-reset: orderedListItem;

        .list
            counter-reset: orderedListItem;

        li, .item
            list-style: none;

            &:before
                margin: $counterMargin;
                content: counters(orderedListItem, '.') ' ';
                counter-increment: orderedListItem;
                opacity: $counterOpacity;

        ol&
            li[value], .item[value]
                &:before
                    margin-right: .8rem;
                    content: attr(value);

    &.bulleted
        padding-left: 1.2rem;

        li, .item
            position: relative;

            &:before
                absolute: left auto top;
                margin: $bulletMargin;
                content: '\2022';
                opacity: $bulletOpacity;

    &.divided
        max-width: 36rem;

        &.block
            max-width: none;
            width: 100%;

        li, .item
            margin: 0;
            padding: $dividedPadding;
            border-bottom: 1px solid $colorBorder;

            a
                display: inline-block;
                float: right;

    &.horizontal
        li, .item
            display: inline-block;
            margin: 0;

            & + li, & + .item
                margin-left: 2.4rem;
