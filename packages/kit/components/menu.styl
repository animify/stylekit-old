.menu
    .item
        line-height: $lineHeightBase;
        display: inline-block;
        font-weight: $fontWeight.semiBold;
        @extends .link;
        @extends .link.link-body;

        &.active
            color: $color.base;

        & + .item
            margin-left: 1.6rem;

        &.header
            color: $textColor.heading;
            font-weight: $fontWeight.bold;

    & > .dropdown, & > .item, & .float-right > .dropdown, & .float-right > .item, & .float-left > .dropdown, & .float-left > .item
        & + .dropdown, & + .item
            margin: 0 0 0 3.6rem;

    .container
        & > .item + .item
            margin: 0 0 0 2.4rem;

    &.basic
        padding: 0 2.4rem;
        background-color: $color.snow;

        .item
            padding: 1.2rem 0;

    &.nav
        padding: 0 2.4rem;
        background-color: #fff;
        fixed: top left;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 1px 14px 0 rgba(0, 0, 31, .1);

        &.submenu
            absolute: top 60px left;

        &.header
            padding: .8rem 0 4rem 0;
            background: linear-gradient(to bottom, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0))

            &.hasborder
                box-shadow: none;

        .item
            padding: 1.2rem 0;

        .logo
            padding: 0;

            img
                height: 2rem;
                relative: top 1.4rem;

        .dropdown .menu
            top: 3.2rem;

    &.sidebar
        z-index: 3000;
        position: fixed;
        bottom: 0;
        top: 0;
        left: 0;
        height: 100%;
        width: 300px;
        padding: 1.2rem 2.4rem;
        background-color: $color.smoke;

        & > .item, & .options > .item
            display: block;
            font-weight: 500;
            color: $textColor.body;
            padding: .4rem 0;

            &.active
                font-weight: 600;

            & + .item
                margin: 0;

        .list
            padding: 0 0 0 1rem;
            margin-bottom: .8rem;

            .item
                font-weight: 400;
                display: block;
                font-size: $fontSize.sub;
                padding: .2rem 0;
                @extends .link;
                @extends .link.link-light;

    &.scrollable
        white-space: nowrap;

    &.footer
        display: flex;

        .list
            flex-basis: 0;
            flex-grow: 1;
            max-width: 100%;

            .item
                display: block;
                padding: 0;

                & + .item
                    margin-left: 0;

                &.header
                    font-size: $fontSize.h6;

            .item:not(.header)
                & > a
                    font-size: $fontSize.body;
                    font-weight: $fontWeight.book;
                    @extends .link;
                    @extends .link.link-body;
