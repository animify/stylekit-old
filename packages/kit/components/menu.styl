$padding = 0 2.4rem;
$navPadding = 0 3.2rem;
$navMainPadding = 1.2rem 3.2rem;
$itemLineHeight = $lineHeightBase;
$itemPadding = 1.2rem 0;
$navItemPadding = 1.2rem 0;
$footerItemPadding = .2rem 0;
$itemMargin = 0 0 0 2.4rem;

.menu
    .item
        color: $textColor.light;
        font-weight: $fontWeight.semiBold;
        line-height: $itemLineHeight;
        padding: $itemPadding;
        display: inline-block;

        &:hover
            color: $textColor.body;

        &.active
            color: $color.base;

        &.header
            color: $textColor.header;
            font-weight: $fontWeight.bold;

    & > .dropdown, & > .item, & .float-right > .dropdown, & .float-right > .item, & .float-left > .dropdown, & .float-left > .item
        & + .dropdown, & + .item
            margin: $itemMargin;

    .container
        & > .item + .item
            margin: $itemMargin;

    &.basic
        padding: $padding;
        background-color: $backgroundColor.light;

    &.nav
        padding: $navPadding;
        background-color: #fff;
        fixed: top left;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 1px 14px 0 rgba(0, 0, 31, .1);

        &.submenu
            absolute: top 60px left;

        &.header
            padding: $navMainPadding;

            &.hasborder
                box-shadow: none;
                border-bottom: 1px solid $borderColor.base;

        .item
            padding: $navItemPadding;

        .logo
            padding: 0;

            img
                relative: top 1.2rem;

        .dropdown .menu
            top: 3.2rem;

    &.sidebar
        z-index: 3000;
        position: fixed;
        bottom: 0;
        top: 0;
        left: 0;
        height: 100%;
        width: 300px;
        padding: 1.2rem 2.4rem;
        background-color: $backgroundColor.light;

        & > .item, & .options > .item
            display: block;
            font-weight: 500;
            color: $textColor.body;
            padding: .4rem 0;

            &.active
                font-weight: 600;

            & + .item
                margin: 0;

        .list
            padding: 0 0 0 1rem;
            margin-bottom: .8rem;

            .item
                font-weight: 400;
                display: block;
                font-size: $fontSize.sub;
                padding: .2rem 0;

                a
                    color: $textColor.light;

    &.scrollable
        white-space: nowrap;

    &.footer
        display: flex;

        .list
            flex-basis: 0;
            flex-grow: 1;
            max-width: 100%;

            .item
                display: block;
                padding: $footerItemPadding;
                font-size: $fontSize.sub;

            .item:not(.header)
                & > a
                    font-weight: $fontWeight.book;
                    color: $textColor.light;

                    &:hover
                        color: $textColor.body;
