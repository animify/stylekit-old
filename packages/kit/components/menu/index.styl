importThemeFile(getFilename(), $theme);
$padding = 0 2rem;
$navPadding = 0 3rem;
$itemLineHeight = $lineHeightBase;
$hoverTextColor = $textColorBody;
$activeTextColor = $colorBase;
$itemColor = $textColorLight;
$itemPadding = 1rem 0;
$navItemPadding = 1.2rem 0;
$itemFontWeight = $fontWeightSemibold;
$itemHeaderFontWeight = $fontWeightBold;
$footerItemPadding = .1rem 0;
$footerItemFontSize = $fontSizeSub;
$itemMargin = 0 0 0 2rem;
$basicBackgroundColor = $bgColorGray;

.menu
    .item
        color: $itemColor;
        font-weight: $itemFontWeight;
        line-height: $itemLineHeight;
        padding: $itemPadding;
        display: inline-block;

        &:hover
            color: $hoverTextColor;

        &.active
            color: $activeTextColor;

        &.header
            color: $textColorHeading;
            font-weight: $itemHeaderFontWeight;

    & > .dropdown, & > .item, & .float-right > .dropdown, & .float-right > .item, & .float-left > .dropdown, & .float-left > .item
        & + .dropdown, & + .item
            margin: $itemMargin;

    .container
        & > .item + .item
            margin: $itemMargin;

    &.basic
        padding: $padding;
        background-color: $basicBackgroundColor;

    &.nav
        padding: $navPadding;
        background-color: #fff;
        fixed: top left;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 1px 14px 0 rgba(0, 0, 31, .1);

        .item
            padding: $navItemPadding;

        .dropdown .menu
            top: 3.2rem;

    &.sidebar
        z-index: 3000;
        position: fixed;
        bottom: 0;
        top: 0;
        left: 0;
        height: 100%;
        width: 300px;
        padding: 1rem 2.4rem;
        background-color: $bgColorGrayLight;

        & > .item, & .options > .item
            display: block;
            font-weight: 500;
            color: $textColorBody;
            padding: .5rem 0;

            &.active
                font-weight: 600;

            & + .item
                margin: 0;

        .list
            padding: 0 0 0 1rem;
            margin-bottom: .8rem;

            .item
                font-weight: 400;
                display: block;
                font-size: $fontSizeSub;
                padding: .2rem 0;

                a
                    color: $textColorLight;

    &.footer
        display: flex;

        .list
            flex-basis: 0;
            flex-grow: 1;
            max-width: 100%;

            .item
                display: block;
                padding: $footerItemPadding;

            .item:not(.header)
                & > a
                    font-weight: $fontWeightBook;
                    color: $itemColor;

                    &:hover
                        color: $hoverTextColor;
