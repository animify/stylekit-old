importThemeFile(getFilename(), $theme);
$padding = 1rem 3rem;
$itemLineHeight = $defautlLineHeight;
$hoverTextColor = $textColorBody;
$activeTextColor = $colorBase;
$itemColor = $textColorLight;
$itemFontWeight = $fontWeightSemibold;
$itemMargin = 0 0 0 2rem;
$basicBackgroundColor = $bgColorGray;

.menu
    .item
        color: $itemColor;
        font-weight: $itemFontWeight;
        line-height: $itemLineHeight;

        &:hover
            color: $hoverTextColor;

        &.active
            color: $activeTextColor;

    .dropdown, .item
        & + .dropdown, & + .item
            margin: $itemMargin;

    &.basic
        padding: $padding;
        background-color: $basicBackgroundColor;

    &.nav
        padding: $padding;
        background-color: #fff;
        fixed: top left;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 1px 14px 0 rgba(0, 0, 31, .1);

    &.columns
        display: flex;

        .list
            flex-basis: 0;
            flex-grow: 1;
            max-width: 100%;
