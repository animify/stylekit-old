messageStyle(type)
    border-color: $borderColor[type];
    background-color: lighten(@border-color, 90%);
    color: darken(@border-color, 45%);

    h5
        color: darken(@border-color, 60%);

.message
    margin: 1.2rem 0;
    padding: 1.2rem 1.6rem;
    border: 0;
    border-left: 6px solid $borderColor.base;
    border-radius: $borderRadius.base;
    background-color: $backgroundColor.lightest;
    color: $textColor.body;
    line-height: $lineHeightBase;

    &.warning
        messageStyle: 'warning';

    &.important
        messageStyle: 'important';

    &.success
        messageStyle: 'success';

    &.info
        messageStyle: 'info';

    a
        color: inherit;
        text-decoration: underline;
