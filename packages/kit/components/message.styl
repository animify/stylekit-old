$borderWidth = 6px;
$margin = 1.2rem 0;
$padding = 1.2rem 1.6rem;

styleColored(type)
    border-color: $borderColor[type];
    background-color: lighten(@border-color, 90%);
    color: darken(@border-color, 45%);

    h5
        color: darken(@border-color, 60%);

.message
    margin: $margin;
    padding: $padding;
    border: 0;
    border-left: $borderWidth solid $borderColor.base;
    border-radius: $borderRadius.base;
    background-color: $backgroundColor.light;
    color: $textColor.body;
    line-height: $lineHeightBase;

    &.warning
        styleColored('warning');

    &.important
        styleColored('important');

    &.success
        styleColored('success');

    &.info
        styleColored('info');

    a
        color: inherit;
        text-decoration: underline;
