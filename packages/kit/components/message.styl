messageStyle(type)
    border-color: $uiColor[type];
.message
    margin: 1.2rem 0;
    padding: 1rem 1.6rem;
    border: 0;
    border-left: 6px solid $color.smoke;
    border-radius: $borderRadius.base;
    background-color: $color.dim;
    color: $textColor.body;
    line-height: $lineHeightBase;
    font-size: $fontSize.sub;

    &.warning
        messageStyle: 'warning';

    &.negative
        messageStyle: 'negative';

    &.positive
        messageStyle: 'positive';

    &.info
        messageStyle: 'info';

    strong
        color: $textColor.heading;
        font-size: $fontSize.body;
    a
        @extends .link;
        @extends .link.link-underline;
        @extends .link.link-light;
        @extends .link.link-light.link-underline;
