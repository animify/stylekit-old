$borderColor = $color.border;
$borderRadius = $borderRadiusM;
$borderWidth = 6px;
$lineHeight = $lineHeightBase;
$margin = 1.2rem 0;
$padding = 1.2rem 1.6rem;

styleColored(type)
    border-color: $color['border' + camelCase(type)];
    background-color: lighten(@border-color, 90%);
    color: darken(@border-color, 45%);

    h5
        color: darken(@border-color, 60%);

.message
    margin: $margin;
    padding: $padding;
    border: 0;
    border-left: $borderWidth solid $backgroundColor.base;
    border-radius: $borderRadius;
    background-color: $backgroundColor.light;
    color: $textColor.body;
    line-height: $lineHeight;

    &.warning
        styleColored('warning');

    &.important
        styleColored('important');

    &.success
        styleColored('success');

    &.info
        styleColored('info');

    a
        color: inherit;
        text-decoration: underline;
