importThemeFile(getFilename(), $theme);
$borderRadius = $borderRadiusM;
$height = 1.6rem;
$barBorderRadius = $borderRadius;
$statusLineHeight = $height;

styleSized(size)
    if (size == 'tiny')
        height: .2rem;

    if (size == 'small')
        height: .8rem;

    if (size == 'large')
        height: 2.8rem;

        .status
            font-size: $fontSizeBody;
            line-height: 2.8rem;

.progress
    cf();

    height: $height;
    border-radius: $borderRadius;
    background-color: $backgroundColor.base;
    content: '';

    .bar
        position: relative;
        width: 0;
        height: 100%;
        border-radius: $barBorderRadius;
        background-color: $color.base;

        .status
            absolute: right .8rem;
            display: none;
            color: $textColor.white;
            font-weight: $fontWeight.bold;
            font-size: $fontSize.small;
            line-height: $statusLineHeight;

    &.tiny
        styleSized('tiny');

    &.small
        styleSized('small');

    &.large
        styleSized('large');

    &:not(.tiny):not(.small)
        .bar.show
            .status
                display: block;
