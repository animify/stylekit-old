importThemeFile(getFilename(), $theme);
$arrowBoxShadow = 1px 1px 0 0 $colorBorder;
$invertedArrowBoxShadow = -1px -1px 0 0 $colorBorder;
$bodyBoxShadow = $boxShadowSubtle;
$bodyPadding = .6em 1.2em;

.tooltip[data-content]
    position: relative;

    &:before
        position: absolute;
        z-index: 24;
        width: .8rem;
        height: .8rem;
        background-color: $backgroundColor.white;
        box-shadow: $arrowBoxShadow;
        content: ' ';
        opacity: 0;
        transition: all cubic-bezier(.02, .49, .01, .97) .14s;
        transform: rotate(45deg) scale(0);
        transform-origin: center top;
        will-change: transform, opacity;

        ../[data-position~=bottom]:before
            box-shadow: $invertedArrowBoxShadow;

    &:after
        position: absolute;
        z-index: 20;
        padding: $bodyPadding;
        max-width: none;
        border: 1px solid $colorBorder;
        border-radius: $borderRadiusM;
        background-color: $backgroundColor.white;
        box-shadow: $bodyBoxShadow;
        color: $textColor.body;
        content: attr(data-content);
        text-align: left;
        white-space: nowrap;
        cursor: default;
        transition: all cubic-bezier(.02, .49, .01, .97) .14s;
        transform: scale(0);
        pointer-events: none;
        will-change: transform, opacity;

    &.dark
        &:before
            background-color: $backgroundColor.dark;
            box-shadow: none !important;

        &:after
            border-color: $backgroundColor.dark;
            background-color: $backgroundColor.dark;
            color: $color.white;

    &:hover
        &:before
            opacity: 1;
            transform: rotate(45deg) scale(1);

        &:after
            transform: scale(1);

    for size in $sizeList
        &[data-text={size}]
            &:after
                font-size: lookup('$font-size-' + size);

    &[data-position~=top]
        &:before
            bottom: 100%;
            margin-bottom: .2rem;

        &:after
            bottom: 100%;
            margin-bottom: .6rem;

    &[data-position~=bottom]
        &:before
            top: 100%;
            margin-top: .4rem;

        &:after
            top: 100%;
            margin-top: .6rem;

    &[data-position='top left']
        &:before
            left: 1.2rem;

        &:after
            right: auto;
            left: 0;
            transform-origin: left bottom;

    &[data-position='top center']
        &:before
            left: 50%;

        &:after
            left: 50%;
            transform: translateX(-50%) scale(0);
            transform-origin: center bottom;

        &:hover
            &:after
                transform: translateX(-50%) scale(1);

            &:before
                transform: rotate(45deg) scale(1);

    &[data-position='top right']
        &:before
            right: 1.2rem;

        &:after
            right: 0;
            left: auto;
            transform-origin: right bottom;

    &[data-position='bottom left']
        &:before
            left: 1.2rem;

        &:after
            right: auto;
            left: 0;
            transform-origin: left top;

    &[data-position='bottom center']
        &:before
            left: 50%;

        &:after
            left: 50%;
            transform: translateX(-50%) scale(0);
            transform-origin: center top;

        &:hover:after
            transform: translateX(-50%) scale(1);

    &[data-position='bottom right']
        &:before
            right: 1.2rem;

        &:after
            right: 0;
            left: auto;
            transform-origin: right top;
