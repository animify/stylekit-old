code
    display: block;
    width: 100%;
    padding: 1.14rem 1.24rem;
    position: relative;
    border-radius: $borderRadiusL;
    background-color: $bgColorDark;
    color: rgba(255, 255, 255, .84);
    font-family: $fontFamilyCode;
    font-size: $fontSizeSmall;
    overflow: hidden;
    overflow-x: auto;

    & + code
        margin-top: 1rem;
