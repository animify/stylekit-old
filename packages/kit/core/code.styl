code
    display: block;
    width: 100%;
    padding: 1.2rem 1.4rem;
    position: relative;
    border-radius: $borderRadius.base;
    background-color: $color.snow;
    color: $textColor.light;
    font-family: $fontFamily.code;
    font-size: $fontSize.small;
    overflow: hidden;
    overflow-x: auto;
    line-height: 1.8;

pre
    tab-size: 6;
    flex: 1;
    margin: 0;
    min-width: 0;
