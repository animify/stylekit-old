code
    display: block;
    width: 100%;
    padding: .86rem 1rem;
    position: relative;
    border-radius: $borderRadiusL;
    background-color: #f5f8fc;
    color: $textColorBody;
    font-family: $fontFamilyCode;
    font-size: $fontSizeSub;
    overflow: hidden;
    overflow-x: auto;
    line-height: $lineHeightBase;

    & + code
        margin-top: 1rem;
