code
    display: block;
    width: 100%;
    padding: 1.14rem 1.24rem;
    position: relative;
    border-radius: $borderRadiusL;
    background-color: $bgColorGrayLightest;
    color: #bfc8ce;
    font-family: $fontFamilyCode;
    font-size: $fontSizeSmall;
    overflow: hidden;
    overflow-x: auto;
    line-height: $lineHeightBase;

    & + code
        margin-top: 1rem;
