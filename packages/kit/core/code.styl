code
    display: block;
    width: 100%;
    padding: .8rem 1.2rem;
    position: relative;
    border-radius: $borderRadiusM;
    background-color: #fff;
    color: $textColorBody;
    font-family: $fontFamilyCode;
    font-size: $fontSize.sub;
    overflow: hidden;
    overflow-x: auto;
    line-height: 1.6;
    border: 1px solid $colorBorder;

    & + code
        margin-top: 1.2rem;
