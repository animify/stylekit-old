.transitionDuration
    &-0
        transition-duration: $duration0;

    &-s
        transition-duration: $durationS;

    &-m
        transition-duration: $durationM;

    &-l
        transition-duration: $durationL;

    &-xl
        transition-duration: $durationXL;

    &-xxl
        transition-duration: $durationXXL;

.transitionType
    &-linear
        transition-timing-function: linear;

    &-ease
        transition-timing-function: ease;

    &-scaleIn
        transition-timing-function: cubic-bezier(0, 1.42, .44, 1);

    &-scaleOut
        transition-timing-function: cubic-bezier(.16, .86, .44, 1);

    &-spring
        transition-timing-function: cubic-bezier(.68, -.55, .27, 1.55);

    &-bounce
        transition-timing-function: cubic-bezier(.04, .89, .76, 1.74);

.animation-spin
    animation: spin $durationXXXL infinite linear;

.animation-rotate
    animation: spin $durationXXXXL $durationXXXXL infinite cubic-bezier(.04, .95, .17, 1);

.animation-bounce
    animation: bounce $durationXXXL infinite cubic-bezier(.04, .95, .17, 1);

.animation-pulse
    animation: pulse $durationXXXL infinite linear;

.animation-shake
    animation: shake $durationXXXL infinite linear;

.animation-swing
    transform-origin: 50% 0;
    animation: swing $durationXXXXL infinite linear;

.animation-spring
    animation: spring $durationL cubic-bezier(.04, .95, .17, 1);

.landing-fadein
    animation: fadein $durationXL linear forwards;
    opacity: 0;

.landing-ascend
    animation: ascend $durationXL linear forwards;
    opacity: 0;

.landing-descend
    animation: descend $durationXL linear forwards;
    opacity: 0;
