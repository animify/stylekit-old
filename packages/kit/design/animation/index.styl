.transitionDuration
    &-0
        transition-duration: duration-0;

    &-s
        transition-duration: duration-s;

    &-m
        transition-duration: duration-m;

    &-l
        transition-duration: duration-l;

    &-xl
        transition-duration: duration-xl;

    &-xxl
        transition-duration: duration-xxl;

.transitionType
    &-linear
        transition-timing-function: linear;

    &-ease
        transition-timing-function: ease;

    &-scaleIn
        transition-timing-function: cubic-bezier(0, 1.42, .44, 1);

    &-scaleOut
        transition-timing-function: cubic-bezier(.16, .86, .44, 1);

    &-spring
        transition-timing-function: cubic-bezier(.68, -.55, .27, 1.55);

    &-bounce
        transition-timing-function: cubic-bezier(.04, .89, .76, 1.74);

.animation-spin
    animation: spin duration-xxxl infinite linear;

.animation-rotate
    animation: spin 3s duration-xxl infinite cubic-bezier(.04, .95, .17, 1);

.animation-bounce
    animation: bounce duration-xxxl infinite cubic-bezier(.04, .95, .17, 1);

.animation-pulse
    animation: pulse duration-xxxl infinite linear;

.animation-shake
    animation: shake duration-xxxl infinite linear;

.animation-swing
    transform-origin: 50% 0;
    animation: swing duration-xxxxl infinite linear;

.animation-spring
    animation: spring duration-l cubic-bezier(.04, .95, .17, 1);

.landing-fadein
    animation: fadein duration-xl linear forwards;
    opacity: 0;

.landing-ascend
    animation: ascend duration-xl linear forwards;
    opacity: 0;

.landing-descend
    animation: descend duration-xl linear forwards;
    opacity: 0;
