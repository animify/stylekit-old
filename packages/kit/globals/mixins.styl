disabled()
    &.disabled, &[disabled]
        cursor: not-allowed;
        opacity: .6;
        pointer-events: none;
        {block};

inputPlaceholder()
    &::placeholder
        {block};

    &::-webkit-input-placeholder
        {block};

    &::-moz-placeholder
        {block};

    &::-ms-input-placeholder
        {block};

size($width, $height = $width)
    +cache('w' + $width)
        width: $width;

    +cache('h' + $height)
        height: $height;

responsiveClass()
    {block};

    for $breakpoint in $breakpointIdentifiers
        +above($breakpoint)
            &\\\@{$breakpoint}
                +cache($breakpoint)
                    {block};
