html, body
    height: 100%;
    width: 100%;

body
    margin: 0;
    padding: 0;
    color: $textColorBody;
    background-color: $bgColorBody;
    font-family: $defaultFontFamily;
    font-size: $defaultFontSize;
    line-height: $defautlLineHeight;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

for h in (1 .. 5)
    h{h}
        font-size: lookup('$fontSizeH' + h);
        font-weight: $fontWeightSemibold;
        color: $textColorHeader;
        line-height: $defautlLineHeight;

a
    text-decoration: none;
    color: $colorBase;

    &:hover
        color: lighten($colorBase, $colorVariation);
        cursor: pointer;

small, .small
    font-size: $fontSizeSmall;

strong, .strong
    font-weight: $fontWeightBold;

footer
    margin-top: 5rem;
    background-color: $bgColorGrayLight;
    padding: 3.6rem 0;
