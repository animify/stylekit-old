$color = {
    base: #000000,
    red: #f7233f,
    orange: #ef853f,
    yellow: #ECCA0B,
    green: #08c46f,
    blue: #40a2f1,
    purple: #5b02ea,
    pink: #f0027e,
    white: #ffffff,
    black: #000000,
    ash: #5E636C
};
$backgroundColor = {
    dark: #1c222b,
    body: #ffffff,
    base: #DDE1E6,
    light: #FCFAFA,
    lightest: #FAFAFA,
    white: #ffffff
};
$textColorHeading ?= #000000;
$textColorBody ?= #555555;
$textColorLight ?= #959595;
$textColorDisabled ?= #B3B3B3;
$colorBorder ?= #f2f2f2;
$colorBorderInfo ?= lighten($color.blue, 10%);
$colorBorderWarning ?= lighten($color.yellow, 10%);
$colorBorderImportant ?= lighten($color.red, 10%);
$colorBorderSuccess ?= lighten($color.green, 10%);
foovar('src/definitions/colors.js', {
    include: '(^\$color|^\$text|^\$bgColor)'
});
