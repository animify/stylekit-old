$color = {
    base: #3662f9,
    red: #f7233f,
    orange: #ef853f,
    yellow: #ECCA0B,
    green: #1faf65,
    blue: #3575ee,
    purple: #5b02ea,
    pink: #f0027e,
    white: #ffffff,
    black: #000000,
    ash: #5E636C
};
$borderColor = {
    dark: #ccc,
    base: #e4e4e4,
    info: lighten($color.blue, 10%),
    warning: lighten($color.yellow, 10%),
    important: lighten($color.red, 10%),
    success: lighten($color.green, 10%)
};
$backgroundColor = {
    dark: #1f2e3e,
    grey: #f6f7f9,
    light: #eceff1,
    lighter: #f4f6f7,
    lightest: #fafafa,
    white: #ffffff,
    black: #000000
};
$textColor = {
    header: #111,
    body: #444,
    light: #777,
    disabled: #999,
    white: #ffffff
};
