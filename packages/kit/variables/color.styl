$color = {
    base: #6037ee,
    red: #f7233f,
    orange: #ef853f,
    yellow: #ECCA0B,
    green: #17c49f,
    blue: #3575ee,
    purple: #5b02ea,
    pink: #f0027e,
    white: #ffffff,
    black: #000000,
    ash: #5E636C
};
$borderColor = {
    base: #dadbdd,
    info: lighten($color.blue, 10%),
    warning: lighten($color.yellow, 10%),
    important: lighten($color.red, 10%),
    success: lighten($color.green, 10%)
};
$backgroundColor = {
    dark: #1c222b,
    base: #f6f7f9,
    light: #FCFAFA,
    lightest: #FAFAFA,
    white: #ffffff
};
$textColor = {
    header: #000000,
    body: #253144,
    light: #959595,
    disabled: #B3B3B3,
    white: #ffffff
};