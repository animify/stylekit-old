$color = {
    base: #000000,
    red: #f7233f,
    orange: #ef853f,
    yellow: #ECCA0B,
    green: #08c46f,
    blue: #40a2f1,
    purple: #5b02ea,
    pink: #f0027e,
    white: #ffffff,
    black: #000000,
    ash: #5E636C,
    border: #f2f2f2
};
$borderColor = {
    base: #f2f2f2,
    info: lighten($color.blue, 10%),
    warning: lighten($color.yellow, 10%),
    important: lighten($color.red, 10%),
    success: lighten($color.green, 10%)
};
$backgroundColor = {
    dark: #1c222b,
    body: #ffffff,
    base: #DDE1E6,
    light: #FCFAFA,
    lightest: #FAFAFA,
    white: #ffffff
};
$textColor = {
    header: #000000,
    body: #555555,
    light: #959595,
    disabled: #B3B3B3,
    white: #ffffff
};
