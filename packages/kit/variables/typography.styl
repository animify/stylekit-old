$fontFamily = {
    body: 'Inter UI',
    header: 'HK Grotesk',
    code: 'Fira Mono'
};
$fontSize = {
    h1: 4.8rem,
    h2: 3.6rem,
    h3: 3rem,
    h4: 2.4rem,
    h5: 1.8rem,
    body: 1.6rem,
    sub: 1.2rem,
    small: 1.1rem
};
$fontWeight = {
    book: 400,
    semiBold: 500,
    bold: 600,
    black: 800
};
$lineHeightBase ?= 1.5;
foovar('src/definitions/typography.js', {
    include: '^\$fontSize',
    plainObject: 'css'
});
