$fontFamily = {
    body: 'Inter UI',
    header: 'HK Grotesk',
    code: 'Fira Mono'
};
$fontSize = {
    h1: 6rem,
    h2: 4.4rem,
    h3: 3.2rem,
    h4: 2.4rem,
    h5: 2rem,
    body: 1.4rem,
    sub: 1.3rem,
    small: 1.2rem
};
$lineHeight = {
    h1: 8.6rem,
    h2: 5.6rem,
    h3: 3.6rem,
    h4: 2.8rem,
    h5: 2.4rem,
    body: 1.44
};
$variantFontSize = {
    tiny: 1rem,
    small: 1.2rem,
    medium: 1.8rem,
    large: 2rem
};
$fontWeight = {
    book: 400,
    semiBold: 500,
    bold: 600,
    black: 800
