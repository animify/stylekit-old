$fontFamily = {
    body: 'Inter UI',
    header: 'HK Grotesk',
    code: 'Fira Mono'
};
$fontSize = {
    h1: 5.4rem,
    h2: 4.2rem,
    h3: 3rem,
    h4: 2.4rem,
    h5: 2rem,
    body: 1.5rem,
    sub: 1.3rem,
    small: 1.1rem
};
$variantFontSize = {
    tiny: 1rem,
    small: 1.2rem,
    medium: 1.8rem,
    large: 2rem,
};
$fontWeight = {
    book: 400,
    semiBold: 500,
    bold: 600,
    black: 800
};
$lineHeightBase ?= 1.5;
