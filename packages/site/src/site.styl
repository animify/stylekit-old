@import 'nib';
@import 'jeet';
@import 'rupture';
@import './../../kit/variables/*';
@import './styles/*';

.layout
    margin: 12.4rem 0;
    cf();
    .hero
        margin: 4rem 0;
        h1
            font-size: 6.8rem;
        h3
            color: $textColor.body;
            font-weight: $fontWeight.book;

.menu
    .set
        display: inline;
    .set > .selecteditem
        relative: top .4rem left 2.4rem;
        font-weight: 500;
        color: $color.base;
        cursor: pointer;
        border-left: 2px solid $borderColor.base;
        padding-left: 2.4rem;
        svg
            width: 1.6rem;
            height: 1.6rem;
            relative: top .2rem left .4rem;

.guide
    display: flex;
    flex-direction: column;

    & + .guide
        margin-top: 8rem;

    &-description
        width: 100%;
        display: block;
        h4
            color: $textColor.body;
            font-weight: $fontWeight.book;

    &-subsection
        display: flex;
        border-top: 1px solid $borderColor.base;
        margin-top: 2.8rem;
        padding-top: 2.8rem;

        .row + .row
            margin-top: 2.4rem;

        &-description
            width: 30%;
            padding-right: 2.8rem;

        .module
            position: relative;
            display: flex;
            flex-grow: 1;
            flex-direction: column;
            width: 70%;

            .container
                background-color: #000;
                height: 120px;
                width: 320px;
                margin: 0 auto;
                border-radius: $borderRadius.base;
                &.fluid
                    width: 100%;

            & > .content
                border-radius: $borderRadius.base;
                .nav.menu
                    position: static;
                .progress + .progress
                    margin-top: 1rem;
                .button + .button, .label + .label
                    margin-left: 1rem;

            & > .snippet
                margin-top: 1rem;
                position: relative;

            &.open
                & > .toggle
                    background-color: $color.white;
                & > .snippet
                    display: block;

.variable-sample
    .inner
        display: flex;
        flex-direction: row;
        width: 100%;
        flex: 1 0 100%;

    & + .variable-sample
        margin-top: 1.2rem;

    &.color
        .inner
            align-items: center;
            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: $boxShadow.close;
            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;

    &.shape
        .inner
            align-items: center;
            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: none;
                background-color: #fff;
                border: 1px solid $borderColor.base;
            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;

    &.text
        & + .text
            margin-top: 2rem;

        .inner
            flex-direction: column;
            .style
                color: $textColor.body;
                width: 100%
            .about
                display: flex;
                flex-direction: column;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;
