@import 'nib';
@import 'jeet';
@import 'rupture';
@import './../../kit/variables/*';
@import './styles/*';

.guide
    display: flex;
    flex-direction: column;

    & + .guide
        margin-top: 8rem;

    &-description
        width: 100%;
        display: block;
        h4
            color: $textColorBody;
            font-weight: $fontWeightBook;

    &-subsection
        display: flex;
        border-top: 1px solid $colorBorder;
        margin-top: 2.8rem;
        padding-top: 2.8rem;

        .row + .row
            margin-top: 2.4rem;

        &-description
            width: 30%;
            padding-right: 2.8rem;

.layout
    margin: 12.4rem 0;
    cf();
    .hero
        margin: 4rem 0;
        h1
            font-size: 6rem;
        h3
            color: $textColorBody;
            font-weight: $fontWeightBook;
