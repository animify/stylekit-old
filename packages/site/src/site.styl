@import 'nib';
@import 'jeet';
@import 'rupture';
@import './../../kit/variables/*';
@import './styles/*';

.layout
    margin: 10.8rem 0;

.hero
    margin: 0 0 4rem;

    h4
        color: $textColor.body;
        font-weight: $fontWeight.book;

.menu
    .set
        display: inline;

    .set > .selecteditem
        relative: top .4rem left 2.4rem;
        font-weight: 500;
        color: $color.base;
        border-left: 2px solid $borderColor.base;
        padding-left: 2.4rem;

        svg
            width: 1.6rem;
            height: 1.6rem;
            relative: top .2rem left .4rem;

.guide
    & + .guide
        margin-top: 8rem;

    &-description
        width: 100%;
        display: block;

        h5
            color: $textColor.body;
            font-weight: $fontWeight.book;
            letter-spacing: 0;

    &-subsection
        border-top: 1px solid $borderColor.base;
        margin-top: 3.6rem;
        padding-top: 3.6rem;

        .row + .row
            margin-top: 2.4rem;

        .module
            position: relative;

            .container
                background-color: $backgroundColor.black;
                height: 120px;
                width: 320px;
                margin: 0 auto;
                border-radius: $borderRadius.base;

                &.fluid
                    width: 100%;

            & > .content
                border-radius: $borderRadius.base;
                margin: 2rem 0;

                .nav.menu
                    position: static;

                .progress + .progress
                    margin-top: 1rem;

                .button + .button, .label + .label
                    margin-left: 1rem;

            & > .snippet
                position: relative;

                code + code
                    padding-left: 4.4rem;

            &.open
                & > .toggle
                    background-color: $color.white;

                & > .snippet
                    display: block;

.variable-sample
    .inner
        display: flex;
        flex-direction: row;
        width: 100%;
        flex: 1 0 100%;

    & + .variable-sample
        margin-top: 1.2rem;

    &.color
        .inner
            align-items: center;

            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: $boxShadow.close;

            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;

                strong
                    color: $textColor.header;

                small
                    color: $textColor.body;

    &.shape
        .inner
            align-items: center;

            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: none;
                background-color: $backgroundColor.white;
                border: 1px solid $borderColor.base;

            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;

                strong
                    color: $textColor.header;

                small
                    color: $textColor.body;

    &.text
        & + .text
            margin-top: 2rem;

        .inner
            flex-direction: column;

            .style
                color: $textColor.header;
                width: 100%;

            .about
                display: flex;
                flex-direction: column;

                strong
                    color: $textColor.header;

                small
                    color: $textColor.body;
