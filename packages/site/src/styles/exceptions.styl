.module .content
    .nav.menu
        position: static;
    .progress + .progress
        margin-top: 1rem;
    .button + .button, .label + .label
        margin-left: 1rem;

.menu
    .set
        display: inline;
    .set > .selecteditem
        relative: top .4rem left 2.4rem;
        font-weight: 500;
        color: $color.base;
        cursor: pointer;
        border-left: 2px solid $borderColor.base;
        padding-left: 2.4rem;
        svg
            width: 1.6rem;
            height: 1.6rem;
            relative: top .2rem left .4rem;

.module
    .container
        background-color: #000;
        height: 120px;
        width: 320px;
        margin: 0 auto;
        border-radius: $borderRadius.base;
        &.fluid
            width: 100%;

.exception
    &-flex
        .flex
            height: 100px;
            background-color: $backgroundColor.light;
            & + .flex
                margin-top: .8rem;
    &-flex-order
        .flex
            background-color: $backgroundColor.light;
    &-self-align
        [class*='self-']
            background-color: $backgroundColor.base;
    &-table-elements
        td
            padding: .8rem;
            background-color: $backgroundColor.light;
            & + td
                border-left: .4rem solid #fff;
    &-flex-direction, &-flex-justify
        .flex
            background-color: $backgroundColor.light;
            padding: .4rem;
            & + .flex
                margin-top: .8rem;

.fi
    padding: .4rem .6rem;
