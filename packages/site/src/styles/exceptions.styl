.exception
    &-input
        .input
            & + .input
                margin-top: 2rem;

    &-flex
        .flex
            height: 100px;
            background-color: $backgroundColor.lightest;

            & + .flex
                margin-top: .8rem;

    &-flex-order
        .flex
            background-color: $backgroundColor.lightest;

    &-self-align
        [class*='self-']
            background-color: $backgroundColor.dark;
            color: #fff;

    &-table-elements
        td
            padding: .8rem;
            background-color: $backgroundColor.lightest;

            & + td
                border-left: .4rem solid #fff;

    &-flex-direction, &-flex-justify
        .flex
            background-color: $backgroundColor.lightest;
            padding: .4rem;

            & + .flex
                margin-top: .8rem;
