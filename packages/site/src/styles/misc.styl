.square
    background-color: $color.pink;
    border: 2px solid rgba($color.black, 10%);
    color: $textColor.heading;
    padding: 1.2rem;
    font-weight: $fontWeight.semiBold;
    border-radius: $borderRadius.base;
    content: ' ';
    width: 4.8rem;
    height: 4.8rem;
    display: block;
    margin: 2px;

    &.margined
        margin: 0 auto 2rem;

.containerbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadius.small;
    border: 2px solid $color.dim;

.dashedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadius.small;
    border: 2px dashed $color.dim;

    p
        color: $textColor.heading;

        & + p
            margin-top: 2.4rem;

    &:after
        width: 100%;
        box-shadow: inset 0 0 0 2rem $color.snow;
        height: 100%;
        display: block;
        content: ' ';
        absolute: top left;
        border-radius: $borderRadius.base;
        z-index: -1;

.paddedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadius.base;
    border: 1px solid $color.dim;

    p
        color: $textColor.heading;

        & + p
            margin-top: 2.4rem;

.filled
    padding: 1.2rem;
    border-radius: $borderRadius.base;
    color: $textColor.heading;
    font-weight: $fontWeight.bold;
    font-size: $fontSize.body;
    background-color: $color.dim;

    &.typography
        display: flex;
        padding: 1.2rem 0;
        border-bottom: 1px solid $color.dim;

        span
            color: $textColor.heading;
            display: block;

    &.shadow
        padding: 1.2rem;
        border-radius: $borderRadius.base;
        margin-top: 2.4rem;
        background-color: #fff;
        border: 1px solid $color.dim;

        p
            color: $textColor.heading;

.fi
    padding: .4rem .8rem;
    font-weight: $fontWeight.semiBold;
