.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        border-radius: $borderRadiusM;

    & > .snippet
        margin-top: 1rem;
        position: relative;

    &.open
        & > .toggle
            background-color: $color.white;
        & > .snippet
            display: block;

.square
    border: 2px solid $color.base;
    color: $color.base;
    padding: 1.2rem;
    font-weight: $fontWeight.semiBold;
    border-radius: $borderRadiusM;
    content: ' ';
    width: 4.8rem;
    height: 4.8rem;
    display: block;
    &.margined
        margin: 0 auto 2rem

.dashedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadiusM;
    border: 2px dashed #ecb4cd;
    p
        color: $textColorHeading;
        & + p
            margin-top: 2.4rem;

    &:after
        width: 100%;
        box-shadow: 0 0 0 2rem inset #FFF5F9;
        height: 100%;
        display: block;
        content: ' ';
        absolute: top left;
        border-radius: $borderRadiusM;
        z-index: -1;

.paddedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadiusM;
    border: 1px solid $colorBorder;
    p
        color: $textColorHeading;
        & + p
            margin-top: 2.4rem;

.filled
    // background-color: lighten($color.base, 55%);
    border: 2px solid $color.base;
    color: $color.base;
    padding: 1.2rem;
    font-weight: $fontWeight.semiBold;
    border-radius: $borderRadiusM;

.sample
    &.color
        display: flex;
        flex-direction: column;
        margin-top: 2.8rem;
        border: 1px solid $colorBorder;
        border-radius: $borderRadiusM;
        .preview
            width: 100%;
            border-radius: $borderRadiusM;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 2rem;
            p, small
                color: rgba(0,0,0,.6);
                display: block;
            p
                font-weight: $fontWeight.bold;
                color: rgba(0,0,0,1);
            small
                font-weight: $fontWeight.semiBold;
            &.dark
                small
                    color: rgba(255,255,255,.6);
                p
                    color: #fff;

    &.typography
        display: flex;
        padding: 1.2rem 0;
        border-bottom: 1px solid $colorBorder;
        span
            color: $textColorHeading;
            display: block;

    &.shadow
        padding: 1.2rem;
        border-radius: $borderRadiusM;
        margin-top: 2.4rem;
        background-color: #fff;
        border: 1px solid $colorBorder;
        p
            color: $textColorHeading;
