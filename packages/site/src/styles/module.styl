.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        padding: 1.2em;
        border-radius: $borderRadiusM;
        background-color: #fff;
        box-shadow: 0px 2px 3px rgba(30,30, 31, .1);

    & > .snippet
        margin-top: 1rem;
        box-shadow: 0px 2px 3px rgba(30,30, 31, .1);
        position: relative;

        code
            background-color: #282a36;
            border-radius: $borderRadiusM;

        & > .type
            user-select: none;
            font-size: 9px;
            absolute: top right;
            font-weight: 600;
            padding: .6em 1em;
            letter-spacing: .06rem;
            border-top: 0;
            border-right: 0;
            z-index: 300;
            border-top-right-radius: $borderRadiusM;
            border-bottom-left-radius: $borderRadiusM;
            background-color: lighten(#282a36, 12%);
            color: rgba(255, 255, 255, .8);

    &.open
        & > .toggle
            background-color: $colorWhite;
        & > .snippet
            display: block;
