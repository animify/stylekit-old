.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        border-radius: $borderRadiusM;

    & > .snippet
        margin-top: 1rem;
        position: relative;

    &.open
        & > .toggle
            background-color: $colorWhite;
        & > .snippet
            display: block;

.filled
    // background-color: lighten($colorBase, 55%);
    border: 2px solid $colorBase;
    color: $colorBase;
    padding: 1.2rem;
    font-weight: $fontWeightSemibold;
    border-radius: $borderRadiusM;

.sample
    &.color
        display: flex;
        flex-direction: row;
        margin-top: 2.8rem;
        .preview
            box-shadow: 0px 0px 0px 1px inset rgba(0, 0, 31, .1);
            height: 4.8rem;
            width: 4.8rem;
            border-radius: 50%
            margin-right: 2rem
        .desc
            p
                color: $textColorHeading;
            small
                color: $textColorBody;
                display: block;

    &.typography
        display: flex;
        padding: 1.2rem 0;
        border-bottom: 1px solid $colorBorder;
        span
            color: $textColorHeading;
            display: block;

    &.shadow
        padding: 1.2rem;
        border-radius: $borderRadiusM;
        margin-top: 2.4rem;
        background-color: #fff;
        border: 1px solid $colorBorder;
        p
            color: $textColorHeading;
