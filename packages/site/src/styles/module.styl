.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        border-radius: $borderRadiusM;

    & > .snippet
        margin-top: 1rem;
        position: relative;

    &.open
        & > .toggle
            background-color: $color.white;
        & > .snippet
            display: block;

.square
    background-color: $color.base;
    color: $color.base;
    padding: 1.2rem;
    font-weight: $fontWeight.semiBold;
    border-radius: $borderRadiusM;
    content: ' ';
    width: 4.8rem;
    height: 4.8rem;
    display: block;
    margin: 2px;
    &.margined
        margin: 0 auto 2rem

.containerbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadiusM;
    border: 2px solid $color.border;

.dashedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $backgroundColor.base;
    border: 2px dashed #efefef;
    p
        color: $textColor.header;
        & + p
            margin-top: 2.4rem;

    &:after
        width: 100%;
        box-shadow: 0 0 0 2rem inset $backgroundColor.lightest;
        height: 100%;
        display: block;
        content: ' ';
        absolute: top left;
        border-radius: $borderRadiusM;
        z-index: -1;

.paddedbox
    min-height: 16rem;
    padding: 2rem;
    position: relative;
    border-radius: $borderRadiusM;
    border: 1px solid $color.border;
    p
        color: $textColor.header;
        & + p
            margin-top: 2.4rem;

.filled
    // background-color: lighten($color.base, 55%);
    border: 2px solid $color.base;
    color: $color.base;
    padding: 1.2rem;
    font-weight: $fontWeight.semiBold;
    border-radius: $borderRadiusM;

    &.typography
        display: flex;
        padding: 1.2rem 0;
        border-bottom: 1px solid $color.border;
        span
            color: $textColor.header;
            display: block;

    &.shadow
        padding: 1.2rem;
        border-radius: $borderRadiusM;
        margin-top: 2.4rem;
        background-color: #fff;
        border: 1px solid $color.border;
        p
            color: $textColor.header;

.variable-sample
    .inner
        display: flex;
        flex-direction: row;
        width: 100%;
        flex: 1 0 100%;

    & + .variable-sample
        margin-top: 1.2rem;

    &.color
        .inner
            align-items: center;
            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: $boxShadow.close;
            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;

    &.shape
        .inner
            align-items: center;
            .style
                display: inline-block;
                content: ' ';
                width: 4.8rem;
                height: 4.8rem;
                border-radius: 50%;
                box-shadow: none;
                background-color: #fff;
                border: 1px solid $color.border;
            .about
                display: flex;
                flex-direction: column;
                margin-left: 1.6rem;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;

    &.text
        & + .text
            margin-top: 2rem;

        .inner
            flex-direction: column;
            .style
                color: $textColor.body;
                width: 100%
            .about
                display: flex;
                flex-direction: column;
                strong
                    color: $textColor.header;
                small
                    color: $textColor.body;
