.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        border-radius: $borderRadiusM;

    & > .snippet
        margin-top: 1rem;
        position: relative;

    &.open
        & > .toggle
            background-color: $colorWhite;
        & > .snippet
            display: block;

.sample
    &.color
        display: flex;
        flex-direction: column;
        border-radius: $borderRadiusM;
        margin-top: 2rem;
        box-shadow: 0 1px 14px 0 rgba(0, 0, 31, .1);
        .desc
            padding: 3.2rem 1.2rem 1.2rem
            p
                color: $textColorHeading;
            small
                color: rgba(0, 0, 0, .8);
                display: block;
        &.dark .desc
            p
                color: #fff;
            small
                color: rgba(255, 255, 255, .8);

    &.typography
        display: flex;
        padding: 1.2rem 0;
        border-bottom: 1px solid $colorBorder;
        span
            color: $textColorHeading;
            display: block;

    &.shadow
        padding: 1.2rem;
        border-radius: $borderRadiusM;
        margin-top: 2.4rem;
        background-color: #fff;
        border: 1px solid $colorBorder;
        p
            color: $textColorHeading;
