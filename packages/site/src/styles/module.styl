.module
    position: relative;
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    width: 70%;

    & > .content
        padding: 1.2em;
        border: 1px solid $colorBorder;
        border-radius: $borderRadiusM;
        background-color: #fff;

    & > .snippet
        margin-top: 1rem;
        code
            background-color: #282a36;
            border-radius: $borderRadiusM;

    & > .toggle
        cursor: pointer;
        user-select: none;
        font-size: 11px;
        absolute: top right;
        font-weight: 600;
        padding: .5em .7em;
        border: 1px solid $colorBorder;
        border-top: 0;
        border-right: 0;
        border-bottom-left-radius: $borderRadiusM;
        background-color: $bgColorGrayLight;
        color: $textColorBody;
        &:hover
            color: $colorBase;

    &.open
        & > .toggle
            background-color: $colorWhite;
        & > .snippet
            display: block;
