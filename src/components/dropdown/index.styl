importThemeFile(getFilename(), $theme);
$backgroundColor = $color-white;
$borderColor = $color-border;
$borderRadius = $border-radius-m;
$borderWidth = 1px;
$boxShadow = $box-shadow-close;
$lineHeight = $line-height;
$padding = .8rem 0;
$itemPadding = .2em 1.4em;
$headerColor = $color-text-body;
$headerFontSize = $font-size;
$headerFontWeight = $font-weight-semibold;
$linkColor = $color-text-body;
$hoverLinkColor = $color-base;

.dropdown
    display: inline-block;
    position: relative;

    .menu
        absolute: top 2rem left 0;
        background-color: $backgroundColor;
        border: $borderWidth solid $borderColor;
        border-radius: $borderRadius;
        box-shadow: $boxShadow;
        display: none;
        min-width: 13rem;
        padding: $padding;
        z-index: 800;

        li, a
            display: block;
            line-height: $lineHeight;

        li
            padding: $itemPadding;

            &.header
                color: $headerColor;
                font-size: $headerFontSize;
                font-weight: $headerFontWeight;

        a
            color: $linkColor;
            cursor: pointer;

            &:hover
                color: $hoverLinkColor;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1rem;

    &.right
        .menu
            left: auto;
            right: 0;

    &.upward
        .menu
            bottom: 2rem;
            top: auto;
