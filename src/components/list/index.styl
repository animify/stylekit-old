importThemeFile(getFilename(), $theme);
$textColor = $color-text-body;
$fontSize = $font-size;
$margin = .5rem 0 0 0;
$padding = 0 0 0 1rem;
$itemLineHeight = $line-height;
$itemMargin = 0 0 .5rem 0;
$headerFontWeight = $font-weight-semibold;
$counterOpacity = .6;
$counterMargin = 0 .3rem .8rem 0;
$bulletOpacity = .6;
$bulletMargin = 0 0 0 -1rem;
$dividedPadding = .8rem 0;

.list
    & .list
        margin: $margin;
        padding: $padding;

    li, .item
        color: $textColor;
        font-size: $fontSize;
        line-height: $itemLineHeight;
        margin: $itemMargin;

        & > .header
            display: block;
            font-weight: $headerFontWeight;

    &.ordered
        counter-reset: orderedListItem;

        .list
            counter-reset: orderedListItem;

        li, .item
            list-style: none;

            &:before
                content: counters(orderedListItem, '.') ' ';
                counter-increment: orderedListItem;
                margin: $counterMargin;
                opacity: $counterOpacity;

        ol&
            li[value], .item[value]
                &:before
                    content: attr(value);
                    margin-right: .5rem;

    &.bulleted
        padding-left: 1rem;

        li, .item
            position: relative;

            &:before
                absolute: left auto top;
                content: '\2022';
                margin: $bulletMargin;
                opacity: $bulletOpacity;

    &.divided
        max-width: 36rem;

        &.block
            max-width: none;
            width: 100%;

        li, .item
            border-bottom: 1px solid $color-border;
            margin: 0;
            padding: $dividedPadding;

            a
                display: inline-block;
                float: right;

    &.horizontal
        li, .item
            display: inline-block;
            margin: 0;

            & + li, & + .item
                margin-left: 1.5rem;
