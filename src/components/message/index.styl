importThemeFile(getFilename(), $theme);
$backgroundColor = $color-grey-light;
$borderColor = $color-border;
$borderRadius = $border-radius-m;
$borderWidth = 6px;
$textColor = $color-text-body;
$lineHeight = $line-height;
$margin = 1rem 0;
$padding = 1rem 1.5rem;

styleColored(type)
    border-color: lookup('$color-border-' + type);
    background-color: lighten(@border-color, 90%);
    color: darken(@border-color, 45%);

    h5
        color: darken(@border-color, 60%);

.message
    margin: $margin;
    padding: $padding;
    border: 0;
    border-left: $borderWidth solid $borderColor;
    border-radius: $borderRadius;
    background-color: $backgroundColor;
    color: $textColor;
    line-height: $lineHeight;

    &.warning
        styleColored('warning');

    &.important
        styleColored('important');

    &.success
        styleColored('success');

    &.info
        styleColored('info');

    a
        color: inherit;
        text-decoration: underline;
