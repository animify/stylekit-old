importThemeFile(getFilename(), $theme);
$backgroundColor = $color-border;
$borderRadius = $border-radius-m;
$height = 1.6rem;
$barBorderRadius = $borderRadius;
$barBackgroundColor = darken($backgroundColor, 76%);
$statusColor = $color-white;
$statusFontSize = $font-size-small;
$statusFontWeight = $font-weight-bold;
$statusLineHeight = $height;

styleSized(size)
    if (size == 'tiny')
        height: .26rem;

    if (size == 'small')
        height: .8rem;

    if (size == 'large')
        height: 2.8rem;

        .status
            font-size: $font-size;
            line-height: 2.8rem;

.progress
    cf();

    height: $height;
    border-radius: $borderRadius;
    background-color: $backgroundColor;
    content: '';

    .bar
        position: relative;
        width: 0;
        height: 100%;
        border-radius: $barBorderRadius;
        background-color: $barBackgroundColor;

        .status
            absolute: right .6rem;
            display: none;
            color: $statusColor;
            font-weight: $statusFontWeight;
            font-size: $statusFontSize;
            line-height: $statusLineHeight;

    &.tiny
        styleSized('tiny');

    &.small
        styleSized('small');

    &.large
        styleSized('large');

    &:not(.tiny):not(.small)
        .bar.show
            .status
                display: block;
